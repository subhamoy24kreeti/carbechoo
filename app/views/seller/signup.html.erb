
<div class="container">
<% if flash.key? :error %>
  <% flash[:error].each do |e| %>
    <%= render 'layouts/alert_error', :error => e %>
   <% end %>
  <% end %>
<%= form_with url: seller_create_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label 'first name' ,class:"form-lebel"%>
      <%= f.text_field :first_name, required: true ,class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label 'last name' ,class:"form-lebel"%>
      <%= f.text_field :last_name, required: true ,class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :email ,class:"form-lebel"%>
      <%= email_field_tag :email, "", required: true ,class: "form-control"%>
    </div>

    <div class="form-group">
      <%=f.label 'choose your country'%>
      <%=select_tag(:country_id, options_for_select(@countries, :include_blank => "--select your country--"), class:"custom-select custom-select-lg mb-3", id:"country", required: true) %>
    </div>
    <div class="form-group">
      <%=f.label 'choose your state'%>
      <%=select_tag(:state_id, options_for_select('<option></option>'), class:"custom-select custom-select-lg mb-3", id:"state", required: true) %>
    </div>

    <div class="form-group">
      <%=f.label 'choose your city'%>
      <%=select_tag(:city_id, options_for_select('<option></option>'), class:"custom-select custom-select-lg mb-3", id:"city", required: true) %>
    </div>

    <div class="form-group">
      <%=f.label 'zip code'%>
      <%=f.text_field 'zip_code', class: 'form-control', required: true %>
    </div>
  
    <div class="form-group">
      <%= f.label :password  ,class:"form-lebel"%>
      <%= password_field_tag :password, "", required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label 'confirm password'  ,class:"form-lebel"%>
      <%= password_field_tag :password_confirmation, "", required: true, class: "form-control" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Sign up" ,class: "btn btn-primary w-100"%>
    </div>
  <% end %>
  </div>
  <%= render 'layouts/helper_address' %>