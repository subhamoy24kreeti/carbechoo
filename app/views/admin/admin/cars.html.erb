<style>
  table{
    border-collapse: collapse;
    width: 100%;
  }
  td,th{
    border: 1px solid #dddddd;
    text-align:left;
    padding: 8px;
  }
</style>
<div class="wrapper">
<%= render "admin/layouts/sidebar" %>
<div class='container-fluid p-0'>
  <%= render "admin/layouts/header" %>

  <section>
    <% if flash.key? :notice %>
    <%= render 'layouts/alert_success', notice: flash[:notice] %>
    <% end %>

    <% if flash.key? :error %>
    <%= render 'layouts/alert_error', error: flash[:error]%>
    <% end %>
    <div class="container-fluid mt-3">
    <h3><b>cars</b></h3>
    <table>
    <thead>
    <tr>
    <th>id</th>
    <th>car brand</th>
    <th>car model</th>
    <th>seller name</th>
    <th>phone</th>
    <th>email</th>
    <th>price</th>
    <th>actions</th>
    </tr>
    </thead>
    <tbody>
    <% @cars.each do |c| %>
    <tr>
    <td><%= c.id %></td>
    <td><%= c.brand.brand_name %></td>
    <td><%= c.car_model.name %></td>
    <td><%= c.full_name %></td>
    <td><%= c.phone %></td>
    <td><%= c.email %></td>
    <td><%= c.price %></td>
    <td>
    <%= link_to 'delete', admin_user_delete_path(c.id), class:"btn btn-danger", onclick: 'return confirm("are you sure you want to delete this user")' %>
    <%= link_to 'view', admin_user_view_path(c.id), class:"btn btn-info" %>
    </td>
    </tr>
    <% end %>
    </tbody>
    </table>
    </div>
    </section>
  </div>
  </div>