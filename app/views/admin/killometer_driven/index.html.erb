<style>
table{
    border-collapse: collapse;
    width: 100%;
}
td,th{
    border: 1px solid #dddddd;
    text-align:left;
    padding: 8px;
}
</style>
<div class="wrapper d-flex">
<%= render "admin/layouts/sidebar" %>
<div class='container-fluid p-0'>
   <%= render "admin/layouts/header" %>
    <section>
    <% if flash.key? :alert %>
    <p><%= flash[:alert] %></p>
    <% end %>
     <div class="container-fluid mt-3">
    <table>
      <thead>
       <tr>
    <th>id</th>
    <th>killometer range</th>
    <th>actions</th>
    </tr>
    </thead>
    <tbody>
    <% @killometer_drivens.each do |km| %>
    <tr>
    <td><%=km.id%></td>
    <td><%=km.killometer_range%></td>
    <td>
    <%= link_to 'delete', admin_killometer_driven_delete_path(km.id), class:"btn btn-danger", onclick: 'return confirm("are you sure you want to delete this item")' %>
    <%= link_to 'update', edit_admin_killometer_driven_path(km.id), class:"btn btn-info" %>
    </td>
    </tr>
    <% end %>
    </tbody>
    </table>
    </div>
    </section>
</div>
</div>