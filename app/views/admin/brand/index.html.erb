<style>
table{
    border-collapse: collapse;
    width: 100%;
}
td,th{
    border: 1px solid #dddddd;
    text-align:left;
    padding: 8px;
}
</style>
<div class="wrapper">
<%= render "admin/layouts/sidebar" %>
<div class='container-fluid p-0'>
   <%= render "admin/layouts/header" %>
    <section>
        <% if flash.key? :notice %>
        <%= render 'layouts/alert_success', notice: flash[:notice] %>
        <% end %>

        <% if flash.key? :error %>
        <%= render 'layouts/alert_error', error: flash[:error]%>
        <% end %>
    <div class="container-fluid mt-3">
    <table>
      <thead>
       <tr>
    <th>id</th>
    <th>brand name</th>
    <th>actions</th>
    </tr>
    </thead>
    <tbody>
    <% @brands.each do |b| %>
    <tr>
    <td><%=b.id%></td>
    <td><%=b.brand_name%></td>
    <td>
    <%= link_to 'delete', admin_brand_delete_path(b.id), class:"btn btn-danger", id: 'delete', onclick: 'return confirm("are you sure you want to delete this item")'%>
    <%= link_to 'edit', edit_admin_brand_path(b.id), class:"btn btn-info" %>
    </td>
    </tr>
    <% end %>
    </tbody>
    </table>
    </div>
    </section>
</div>
</div>
