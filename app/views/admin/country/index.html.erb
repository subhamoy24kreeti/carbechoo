<style>
    table{
        border-collapse: collapse;
        width: 100%;
    }
    td,th{
        border: 1px solid #dddddd;
        text-align:left;
        padding: 8px;
    }
    </style>
    <div class="wrapper">
    <%= render "admin/layouts/sidebar" %>
    <div class='container-fluid p-0'>
       <%= render "admin/layouts/header" %>
        <section>
        <% if flash.key? :alert %>
        <p><%= flash[:alert] %></p>
        <% end %>
        <div class="container-fluid mt-3">
        <table>
          <thead>
           <tr>
        <th>id</th>
        <th>country name</th>
        <th>actions</th>
        </tr>
        </thead>
        <tbody>
        <% @countries.each do |country| %>
        <tr>
        <td><%=country.id%></td>
        <td><%=country.name%></td>
        <td>
        <%= link_to 'delete', admin_country_delete_path(country.id), class:"btn btn-danger", onclick: 'return confirm("are you sure you want to delete this item")' %>
        <%= link_to 'update', admin_country_update_path(country.id), class:"btn btn-info" %>
        </td>
        </tr>
        <% end %>
        </tbody>
        </table>
        </div>
        </section>
    </div>
    </div>