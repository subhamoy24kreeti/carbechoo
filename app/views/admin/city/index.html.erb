<% content_for :stylesheets do %>
<%= stylesheet_link_tag 'admin/common_table' , media: 'all', 'data-turbolinks-track': 'reload'%>
<% end %>

<div class="wrapper d-flex">
<%= render "admin/layouts/sidebar" %>
<div class='container-fluid p-0'>
   <%= render "admin/layouts/header" %>
  <section>
  <% if flash.key? :notice %>
  <%= render 'layouts/alert_success',  notice: flash[:notice] %>
  <% end %>

  <% if flash.key? :error %>
  <%= render 'layouts/alert_error',  error: flash[:error]%>
  <% end %>
  
  <div class="container-fluid mt-3">
  <table>
  <thead>
   <tr>
  <th>id</th>
  <th>city name</th>
  <th>state name</th>
  <th>country name</th>
  <th>actions</th>
  </tr>
  </thead>
  <tbody>
  <% @cities.each do |city| %>
  <tr>
  <td><%=city.id%></td>
  <td><%=city.name%></td>
  <td><%=city.state.name %></td>
  <td><%=city.country.name %></td>
  <td>
  <%= link_to 'delete', admin_city_delete_path(city.id), class: "btn btn-danger", onclick: 'return confirm("are you sure you want to delete this item")' %>
  <%= link_to 'edit', edit_admin_city_path(city.id), class: "btn btn-info" %>
  </td>
  </tr>
  <% end %>
  </tbody>
  </table>
  </div>
  </section>
</div>
</div>