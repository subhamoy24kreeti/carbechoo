
<div class="wrapper">
  <%= render "admin/layouts/sidebar" %>
  <div class='container-fluid p-0'>
   <%= render "admin/layouts/header" %>
  <section>
  <% if flash.key? :notice %>
  <%= render 'layouts/alert_success',  :notice =>  flash[:notice] %>
  <% end %>

  <% if flash.key? :error %>
  <%= render 'layouts/alert_error',  :error => flash[:error]%>
  <% end %>
  <div class="container pt-3">
    <%= form_with url: admin_city_update_path(@city.id),  method: :put do |f|%>
    <div class="from-group">
    <%=f.label 'Choose the country'%>
    <%=select_tag(:country_id, options_for_select(get_countries_dropdown, selected: @state.country_id), class: "custom-select custom-select-lg mb-3", id: "country") %>
    </div>
    <div class="form-group">
    <%=f.label 'Choose the state'%>
    <%=select_tag(:state_id, options_for_select( get_statuses_dropdown(@state.country_id), selected: @city.state_id), class: "custom-select custom-select-lg mb-3", id: "state") %>
    </div>
    <div class="form-group">
     <%f.label :name %>
     <%=f.text_field :name, class: "form-control", value: @city.name %>
    </div>
    <%=f.submit :update, class: "btn btn-info" %>
    <% end%>
    </div>
  </section>
  </div>
  </div>
  <%= render 'layouts/helper_address' %>