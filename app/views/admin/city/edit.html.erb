
<div class="wrapper">
    <%= render "admin/layouts/sidebar" %>
    <div class='container-fluid p-0'>
       <%= render "admin/layouts/header" %>
        <section>
        <% if flash.key? :alert %>
        <p><%= flash[:alert] %></p>
        <% end %>
        <div class="container pt-3">
          <%= form_with url: admin_city_update_path(@city.id),  method: :put do |f|%>
          <div class="from-group">
            <%=f.label 'Choose the country'%>
            <%=select_tag(:country_id, options_for_select(@countries, selected: @selected_country_id), class:"custom-select custom-select-lg mb-3", id: "country") %>
          </div>
          <div class="form-group">
            <%=f.label 'Choose the state'%>
            <%=select_tag(:state_id, options_for_select(@states, selected: @city.state_id), class:"custom-select custom-select-lg mb-3", id: "state") %>
          </div>
          <div class="form-group">
             <%f.label :name %>
             <%=f.text_field :name, class:"form-control", value: @city.name %>
          </div>
            <%=f.submit :update, class:"btn btn-info" %>
          <% end%>
          </div>
        </section>
    </div>
    </div>
    <%= render 'layouts/helper_address' %>