
<div class="wrapper">
<%= render "admin/layouts/sidebar" %>
<div class='container-fluid p-0'>
   <%= render "admin/layouts/header" %>
  <section>
  <div class="container mt-3">
    <% if flash.key? :notice %>
    <%= render 'layouts/alert_success',  :notice =>  flash[:notice] %>
    <% end %>

    <% if flash.key? :error %>
    <%= render 'layouts/alert_error',  :error => flash[:error]%>
    <% end %>
    <% if get_brands_dropdown.blank? %>
    you do not create a model name until you create a brand
    <% else %>
    <%= form_with url: admin_car_model_create_path,  method: :post do |f|%>
    <div class="form-group">
    <%f.label 'model name' %>
    <%=f.text_field :name, class:"form-control" %>
    </div>
    <div>
    <div class="form-group required">
    <%=f.label 'choose the brand', class: "control-label"%>
    <%= select_tag(:brand_id, options_for_select( get_brands_dropdown ), class:"custom-select custom-select-lg mb-3", id: "brand", include_blank: '--selecr your brand--') %>
    </div>
    </div>
    <%=f.submit :add ,class:"btn btn-info" %>
    <% end%>
  <% end %>
  </div>
  </section>
</div>
</div>