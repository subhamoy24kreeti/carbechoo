<script>

    $("#country").change(
      function(){
        var p = $("#country").val();
        if(!p){
          $("#state").html("");
          $("#city").html("");
          return;
        }
        console.log(p);
        $.ajax(
          {
            type: 'get',
            url: '<%= ws_get_states_path %>',
            dataType: 'json',
            contentType: 'application/json',
            data: {
              country_id : $("#country").val()  
            },
            success: function(res){
              console.log(res)
              $('#state').html(res.html)
            },
            error: function(err){

            }
          }
        )

      }

    )
    $("#state").change(
      function(){
        var p = $("#state").val();
        console.log(p);
        if(!p){
          $("#city").html("")
          return
        }
      $.ajax({
        type: 'get',
        url: '<%= ws_get_cities_path %>',
        dataType: 'json',
        contentType: 'application/json',
        data: {
          state_id : $("#state").val()   
        },
        success: function(res){
          console.log(res)
          $("#city").html(res.html)
        },
        error: function(err){

        }
      })
    }
    )
  </script>