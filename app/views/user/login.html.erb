<% content_for :stylesheets do %>
<%= stylesheet_link_tag 'login' , media: 'all', 'data-turbolinks-track': 'reload'%>
<% end %>

<header>
  <%= render "user/layouts/header" %>
</header>
<main>
<div class="container mt-3">
<h3 class="text-center"> Login </h3>
<div class="login-form">
<%= form_with url: user_login_post_path, method: :post do |f| %>
<div class="form-group">
<%= f.label :email %>
<%= f.text_field :email, class: 'form-control'%>
</div>
<div>
<%= f.label :password %>
<%= f.text_field :password, type: "password", class: "form-control"%>
</div>
<div class="form-group">
<%= f.submit 'login', class: "btn btn-primary mt-3 text-center w-100" %>
</div>
<% end %>
<div>
  <%= link_to 'forget password', forget_password_request_path %>
</div>
</div>
</div>
</main>